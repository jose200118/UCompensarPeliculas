<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UCompensar Peliculas</title>
    <link rel="icon" type="image/png" href="https://ucompensar.edu.co/wp-content/uploads/2021/04/favicon-150x150.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="https://ucompensar.edu.co/wp-content/uploads/2021/04/favicon-210x210.png" sizes="192x192" />
    <link rel="apple-touch-icon" type="image/png" href="https://ucompensar.edu.co/wp-content/uploads/2021/04/favicon-210x210.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UCompensarPeliculas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asset/style.css" asp-append-version="true" />
    @RenderSection("css", false)

</head>
<body>
    <header>
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background-color:navajowhite !important"> *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top color" >
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="peliculas" asp-action="Index">UCompensar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="peliculas" asp-action="Index">Peliculas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UCompensarPeliculas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
